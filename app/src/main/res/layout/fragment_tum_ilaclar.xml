<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/tumIlaclarButton"
            android:layout_width="124dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_gecenler"
            android:text="Tüm İlaçlar"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/yeniIlacEkleButton"
            app:layout_constraintEnd_toStartOf="@+id/miadiGecenlerButton"
            app:layout_constraintStart_toEndOf="@+id/miadiYaklasanButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.34" />

        <Button
            android:id="@+id/miadiYaklasanButton"


            android:layout_width="102dp"
            android:layout_height="61dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_yaklasan"
            android:text="Miadı Yaklaşanlar"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tumListeRecycler"
            app:layout_constraintEnd_toStartOf="@+id/tumIlaclarButton"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.342" />

        <Button
            android:id="@+id/miadiGecenlerButton"
            android:layout_width="103dp"
            android:layout_height="59dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_tum"
            android:text="Miadı Geçenler"
            android:textAllCaps="false"
            android:textSize="12sp"

            app:layout_constraintBottom_toTopOf="@+id/tumListeRecycler"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.938"
            app:layout_constraintStart_toEndOf="@+id/miadiYaklasanButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.327" />

        <Button
            android:id="@+id/yeniIlacEkleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="55dp"
            android:background="@drawable/btn_ekle"
            android:text="Yeni ilac ekle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/miadiYaklasanButton" />




            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/tumListeRecycler"
                android:layout_width="345dp"
                android:layout_height="376dp"
                android:background="#ECEBE7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </androidx.recyclerview.widget.RecyclerView>




    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>